  <div class="container">
    <h1>Hive Viewer</h1>
  </div>
  <div class="container">
    <div class="col-md-3">
      <div class="row">
        <div class="btn-group">
          <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#collapseExample1">tmp</button> 
          <button class="btn btn-info" type="button" data-toggle="collapse" 
                  data-target="#collapseExample1" aria-expanded="false" 
                  aria-controls="collapseExample">
            <span class="caret"></span>
          </button>
          <div class="collapse" id="collapseExample1">
            <ul>
              <li>orders</li>
              <li>users</li>
              <li>test</li>
              <li>customers</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="btn-group">
          <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#collapseExample">pro</button> 
          <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            <span class="caret"></span>
          </button>
          <div class="collapse" id="collapseExample">
            <ul>
              <li>orders</li>
              <li>users</li>
              <li>test</li>
              <li>customers</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="row">
       
        <form action="">
          <div class="form-group">
            <label for="sqlScript">SQL Editor</label>
            <textarea type="text" class="form-control" id="sqlScript" rows="5">
            </textarea>
            <button type="button" class="btn btn-primary" id="create-btn">Exec Sql</button>
          </div>
        </form>
      </div>
      <div class="row">
        <label>Query Output</label>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead id="tableoutputheader">
              <tr>
                <th>col1</th>
                <th>col2</th>
                <th>col3</th>
              </tr>
            </thead>
            <tbody id="tableoutputbody">
              <tr>
                <td>xiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaoming</td>
                <td>male</td>
                <td>18</td>
              </tr>
              <tr>
                <td>xiaoxiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaominglong</td>
                <td>maldde</td>
                <td>18</td>
              </tr>
              <tr>
                <td>xiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaoming</td>
                <td>male</td>
                <td>18</td>
              </tr>
              <tr>
                <td>xiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaomingxiaoming</td>
                <td>male</td>
                <td>18</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      var contextURL = "${context}";
    $("#create-btn").click(
      function() {
        const requestData = {
        "ajax": "sqlStatement",
        "sqlexec": $("#sqlScript").val()
        };
        $.ajax({
          url: contextURL + "/hive",
          type: "get",
          data: requestData,
          dataType: "json",
          error: function (data) {
            console.log(data);
          },
          success: function(data) {
            console.log(data);
            var headhtml = "<tr>";
            var tablebodyhtml = "";

            for (var i = 0; i < data.header.length; i ++) {
              headhtml += "<th>" + data.header[i] + "</th>";
            }
            headhtml += "</tr>";
            
            for (var i = 0; i < data.data.length; i ++) {
              tablebodyhtml += "<tr>";
              for (var j = 0; j < data.data[i].length; j ++) {
                tablebodyhtml += "<td>" + data.data[i][j] + "</td>";
              }
              tablebodyhtml += "</tr>";
            }

            $("#tableoutputheader").html(headhtml);
            $("#tableoutputbody").html(tablebodyhtml);
          }
          //successHandler
        });  
      }
    )
  </script>
</body>
</html>

